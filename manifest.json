{
    "manifest_version": 2,
    "name": "Hansa Tea Notifier",
    "description": "This extension will open up Tea Request Google spreadsheet",
    "version": "2.0.0",
    "icons":
            {
                "32": "images/hans32.png",
                "64": "images/hans64.png",
                "128": "images/hans128.png"
            },
    "homepage_url": "https://goo.gl/aQqX2b",
    "background":
            {
                "scripts": ["js/background.js"],
                "persistent": true
            },
    "browser_action": {
        "default_icon": "images/hans128.png",
        "default_popup": "popup.html",
        "default_title": "Hansa Tea Notifier"
    },
    "permissions": [
        "activeTab", "storage", "https://goo.gl/ghM5Md", "management",
        "https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.5/css/bootstrap.min.css",
        "http://siyarasoliwood.com/hansTnotify/read.php",
        "http://siyarasoliwood.com/hansTnotify/write.php",
        "alarms", "notifications", "identity", "identity.email", "tts"
    ],
    "options_page": "options.html",
    "minimum_chrome_version": "36"
}
